<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Looper"
            android:id="@+id/textView"
            android:textColor="#FFFFFF"
            android:textSize="50dp"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.pham.looper.RecordButton
            android:background="@drawable/red_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.pham.looper.RecordButton"
            android:id="@+id/recordB1"
            android:layout_weight="1" />

        <com.pham.looper.PlayButton
            android:background="@drawable/green_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="PlayButton"
            android:id="@+id/playB1"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.pham.looper.RecordButton
            android:background="@drawable/red_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.pham.looper.RecordButton"
            android:id="@+id/recordB2"
            android:layout_weight="1" />

        <com.pham.looper.PlayButton
            android:background="@drawable/green_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.pham.looper.PlayButton"
            android:id="@+id/playB2"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.pham.looper.RecordButton
            android:background="@drawable/red_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.pham.looper.RecordButton"
            android:id="@+id/recordB3"
            android:layout_weight="1" />

        <com.pham.looper.PlayButton
            android:background="@drawable/green_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.pham.looper.PlayButton"
            android:id="@+id/playB3"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.pham.looper.RecordButton
            android:background="@drawable/red_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.pham.looper.RecordButton"
            android:id="@+id/recordB4"
            android:layout_weight="1" />

        <com.pham.looper.PlayButton
            android:background="@drawable/green_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.pham.looper.PlayButton"
            android:id="@+id/playB4"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.pham.looper.RecordButton
            android:background="@drawable/red_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.pham.looper.RecordButton"
            android:id="@+id/recordB5"
            android:layout_weight="1" />

        <com.pham.looper.PlayButton
            android:background="@drawable/green_button"
            style="@style/button_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.pham.looper.PlayButton"
            android:id="@+id/playB5"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playAllB"
        android:layout_gravity="center_horizontal" />
</LinearLayout>

</ScrollView>