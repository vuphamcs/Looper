<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.example.pham.looper.RecordButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.example.pham.looper.RecordButton"
            android:id="@+id/recordB1"
            android:layout_weight="1" />

        <com.example.pham.looper.PlayButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="PlayButton"
            android:id="@+id/playB1"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.example.pham.looper.RecordButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.example.pham.looper.RecordButton"
            android:id="@+id/recordB2"
            android:layout_weight="1" />

        <com.example.pham.looper.PlayButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.example.pham.looper.PlayButton"
            android:id="@+id/playB2"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.example.pham.looper.RecordButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.example.pham.looper.RecordButton"
            android:id="@+id/recordB3"
            android:layout_weight="1" />

        <com.example.pham.looper.PlayButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            class="com.example.pham.looper.PlayButton"
            android:id="@+id/playB3"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
